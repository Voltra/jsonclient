{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": false,
        "sourceMap": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "es2018",
        "lib": [
            "dom",
			"esnext"
        ],
        "rootDir": "./src",
        "outDir": "./build-tsc"
    },
    "exclude": [
        ".vscode",
        "node_modules",
        "typings",
        "public",
        "dist"
    ]
}